{
  "manifest_version": 3,
  "name": "Social Post Extractor",
  "description": "提取并复制 Twitter(X) 帖子文案，支持扩展到更多平台。",
  "version": "0.1.0",
  "action": {
    "default_title": "Collected Posts",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
